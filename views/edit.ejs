<%- include("./partials/header") %>

<div class="container">
    <div class="row">
        <div class="col-12">
            <h1 style="text-align:center">Edit Blogpost</h1>
            <div style="width:90%; margin: 30px auto;">
                <form action="/blogs/<%=blog._id%>?_method=PUT" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="blog[title]" value="<%= blog.title %>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="blog[image]" value="<%= blog.image %>">
                    </div>
                    <div class="form-group">
                        <textarea class="form-control" type="" name="blog[body]" rows="10"><%= blog.body %></textarea>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-default btn-block btn-primary">Edit</button>
                    </div>

                </form>
                <a href="/blogs">Back</a>
            </div>
        </div>




    </div>

</div>


<%- include("./partials/footer") %>